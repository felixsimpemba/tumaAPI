# Server
PORT=3000
NODE_ENV=development
BASE_URL=http://localhost:3000

# Database (choose either DATABASE_URL or discrete settings below)
# Example MySQL URL: mysql://user:password@127.0.0.1:3306/tumaapi
# IMPORTANT: Ensure your MySQL user uses a supported auth plugin: mysql_native_password or caching_sha2_password.
# See Docs/mysql-auth-plugins.md for steps to switch if you see "unknown plugin auth_gssapi_client" or similar.
#DATABASE_URL= mysql://root:root@127.0.0.1:3306/tumaapi
DB_DIALECT=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_USER=root
DB_PASSWORD=root
DB_NAME=tumaapi
DB_LOGGING=false
DB_SSL=false
# Connection retry behavior
DB_CONNECT_RETRIES=10
DB_CONNECT_RETRY_DELAY_MS=1500

# JWT
JWT_SECRET=dev_secret_change_me
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=dev_refresh_change_me
JWT_REFRESH_EXPIRES_IN=7d

# OTP
OTP_CODE_TTL=300
OTP_MAX_ATTEMPTS=5
OTP_RATE_LIMIT_WINDOW=60
# Universal OTP for testing (enabled by default in non-production)
OTP_UNIVERSAL_ENABLED=true
OTP_UNIVERSAL_CODE=222222

# External Services (optional for local dev)
FCM_SERVER_KEY=
GOOGLE_MAPS_API_KEY=

# Payments (placeholders)
# MTN_MOMO_API_KEY=
# AIRTEL_MONEY_API_KEY=
# WEBHOOK_SECRET=


# WebSocket Ride Management persistence (optional)
# Toggle DB persistence of WS events without code changes yet
WS_PERSIST_RIDES=false
WS_PERSIST_LOCATIONS=false
WS_LOCATION_SAMPLE_INTERVAL_MS=10000
